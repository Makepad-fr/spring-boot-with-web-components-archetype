<archetype-descriptor
  xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0 https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
  name="java-spring-boot-web-components">
  <requiredProperties>
    <requiredProperty key="groupId">
    </requiredProperty>

    <requiredProperty key="artifactId">
    </requiredProperty>
    <requiredProperty key="version">
    </requiredProperty>

    <requiredProperty key="coreVersion">
      <defaultValue>${version}</defaultValue>
    </requiredProperty>
    <requiredProperty key="coreDirectoryName">
      <defaultValue>${artifactId}-core</defaultValue>
    </requiredProperty>
    <requiredProperty key="coreModuleName">
      <defaultValue>${artifactId}-core</defaultValue>
    </requiredProperty>

    <requiredProperty key="webApplicationVersion">
      <defaultValue>${version}</defaultValue>
    </requiredProperty>
    <requiredProperty key="webApplicationDirectoryName">
      <defaultValue>${artifactId}-web-application</defaultValue>
    </requiredProperty>
    <requiredProperty key="webApplicationModuleName">
      <defaultValue>${artifactId}-web-application</defaultValue>
    </requiredProperty>

    <requiredProperty key="webFrontendVersion">
      <defaultValue>${version}</defaultValue>
    </requiredProperty>
    <requiredProperty key="webFrontendDirectoryName">
      <defaultValue>${artifactId}-web-frontend</defaultValue>
    </requiredProperty>
    <requiredProperty key="webFrontendModuleName">
      <defaultValue>${artifactId}-web-frontend</defaultValue>
    </requiredProperty>

    <requiredProperty key="author">
    </requiredProperty>
    <requiredProperty key="license"/>
    <requiredProperty key="licenseHeader">
      <defaultValue>/* (C)$YEAR */</defaultValue>
      <validationRegex>\/\*(\*(?!\/)|[^*])*\*\/</validationRegex>
    </requiredProperty>
    <requiredProperty key="packageArtifactIdPrefix">
      <defaultValue>${artifactId.replace("-","_")}</defaultValue>
    </requiredProperty>
    <requiredProperty key="packagePrefix">
      <defaultValue>${groupId}.${packageArtifactIdPrefix}</defaultValue>
    </requiredProperty>
      <requiredProperty key="corePackage">
        <defaultValue>${packagePrefix}.core</defaultValue>
      </requiredProperty>
  </requiredProperties>

  <modules>
    <module id="${rootArtifactId}-core" dir="__coreDirectoryName__" name="${coreModuleName}">
      <fileSets>
        <fileSet filtered="true" packaged="true">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-web-frontend" dir="__webFrontendDirectoryName__" name="${webFrontendModuleName}">
      <fileSets>
        <fileSet filtered="true" packaged="true">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.ts</include>
            <include>**/*.css</include>
            <include>**/*.properties</include>
            <include>**/*.peb</include>
          </includes>
        </fileSet>
        <fileSet filtered="true">
          <directory></directory>
          <includes>
           <include>.gitignore</include>
            <include>package.json</include>
            <include>tsconfig.json</include>
            <include>postcss.config.js</include>
            <include>webpack.config.js</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-web-application" dir="__webApplicationDirectoryName__" name="${webApplicationModuleName}">
      <fileSets>
        <fileSet filtered="true" packaged="true">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.properties</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>

</archetype-descriptor>
